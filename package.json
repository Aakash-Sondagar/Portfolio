{
  "name": "aakash-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "add-blog": "node scripts/add-blog.js",
    "add-resource": "node scripts/add-resource.js"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.1.3",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "critters": "^0.0.24",
    "lucide-react": "^0.469.0",
    "next": "14.2.22",
    "next-view-transitions": "^0.3.4",
    "react": "^18",
    "react-dom": "^18",
    "sugar-high": "^0.7.5"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.29",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.22",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|mjs|ts|tsx)$": ["@swc/jest"]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(next-view-transitions)/)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "components/**/*.{js,jsx}",
      "app/**/*.{js,jsx}",
      "utils/**/*.{js,jsx}",
      "content/**/*.{js,jsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}